{
  "name": "amazon-vine-monitor",
  "version": "1.0.0",
  "description": "Scrape Amazon Vine for new items, score appeal via AI, and email batched recommendations.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "scrape": "ts-node src/index.ts --once",
    "db:clear": "node dist/clear-db.js",
    "docker:up": "docker compose up -d mongodb",
    "docker:down": "docker compose down"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mongodb": "^6.3.0",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "puppeteer": "^21.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
