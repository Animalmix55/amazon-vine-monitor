# Amazon (for Vine sign-in)
AMAZON_EMAIL=your-amazon@email.com
AMAZON_PASSWORD=your-password

# MongoDB (default when using docker compose)
MONGODB_URI=mongodb://localhost:27017/vine_monitor

# OpenAI (for appeal scoring; optional if using local logic only)
OPENAI_API_KEY=sk-...
# Items per API request (default 50, max 500); larger = fewer requests
AI_BATCH_SIZE=50
# Max new items to score per scan (default 500); caps cost if 1000s of new items
AI_MAX_ITEMS_PER_RUN=500

# SMTP (for batched recommendation emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Who sends and who receives Vine recommendation emails (sender must be verified in SES)
NOTIFICATION_SENDER=notify@yourdomain.com
NOTIFICATION_RECEIVER=you@email.com
# NOTIFICATION_RECIEVER is also accepted (typo)

# Polling window: next check is random between min and max (default 5â€“45 min)
CHECK_INTERVAL_MIN_MS=300000
CHECK_INTERVAL_MAX_MS=2700000
# Optional: fixed interval (overrides min/max)
# CHECK_INTERVAL_MS=300000

# Run browser with visible window (set to false to watch sign-in/scraping)
HEADLESS=false
